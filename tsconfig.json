{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["./typechain", "./node_modules/@types", "./types"],
    "types": ["@nomiclabs/hardhat-ethers", "@nomiclabs/hardhat-waffle"],
    "noImplicitAny": false
  },
  "contractSizer": {
    "alphaSort": false,
    "disambiguatePaths": true,
    "runOnCompile": true,
    "strict": false,
    "only": [],
  },
  "include": ["./test"],
  "files": ["./hardhat.config.ts"]
}
